{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "tsec",
        "exemptionConfig": "./tsec-exemption-list.json"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@content/*": ["../portfolio-content/*"],
      "@public/*": ["../public"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "portfolio-content/trusted-types.js"
  ],
  "exclude": ["node_modules"]
}
